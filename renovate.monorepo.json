{
  "enabled": true,
  "dependencyDashboard": true,
  "timezone": "Europe/Paris",
  "schedule": [
    "after 7pm and before 7am every weekday",
    "every weekend"
  ],
  "updateNotScheduled": false,
  "rangeStrategy": "bump",
  "prConcurrentLimit": 5,
  "reviewersFromCodeOwners": true,
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "labels": [
    "renovate",
    "dependencies",
    "self-hosted"
  ],
  "enabledManagers": [
    "npm"
  ],
  "vulnerabilityAlerts": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "node",
        "npm"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "@types/node"
      ],
      "allowedVersions": "<17"
    },
    {
      "matchCurrentVersion": "<1.0.0",
      "stabilityDays": 7,
      "dependencyDashboardApproval": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "stabilityDays": 7,
      "dependencyDashboardApproval": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} test",
      "matchPackagePatterns": [
        "jest",
        "nyc",
        "sinon",
        "chai",
        "mocha",
        "nock",
        "supertest"
      ],
      "automerge": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} linter",
      "matchPackagePatterns": [
        "eslint",
        "lint-staged",
        "prettier"
      ],
      "automerge": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} types",
      "matchPackagePatterns": [
        "@types/*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": ">=1.0.0",
      "automerge": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} typescript-non-major",
      "matchPackageNames": [
        "ts-node",
        "typescript"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} all-non-major",
      "matchPackagePatterns": [
        "*"
      ],
      "excludePackageNames": [
        "@types/node",
        "ts-node",
        "typescript"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": ">=1.0.0",
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} typescript-major",
      "matchPackageNames": [
        "ts-node",
        "typescript"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "stabilityDays": 7,
      "dependencyDashboardApproval": true,
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} mongo-major",
      "matchPackagePatterns": [
        "mongo",
        "mongoose"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} fastify-major",
      "matchPackagePatterns": [
        "fastify"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    },
    {
      "groupName": "{{arg0}} pino-major",
      "matchPackagePatterns": [
        "pino"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "extends": [
        "github>GeorgesTech/.github:renovate.namespace({{arg0}})"
      ]
    }
  ]
}
